<!DOCTYPE html>
<html lang="en">

    <head>

        <meta charset="utf-8">
        <meta content="width=device-width, initial-scale=1.0" name="viewport">

        <title>Haleemh Dashboard</title>
        <meta content="" name="description">
        <meta content="" name="keywords">

        <!-- Vendor CSS Files -->
        <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
        <link href="/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
        <link href="/vendor/quill/quill.snow.css" rel="stylesheet">
        <link href="/vendor/quill/quill.bubble.css" rel="stylesheet">
        <link href="/vendor/remixicon/remixicon.css" rel="stylesheet">
        <link href="/vendor/simple-datatables/style.css" rel="stylesheet">

        <!-- Template Main CSS File -->
        <link href="/css/style.css" rel="stylesheet">

    </head>

    <body>

        <!-- ======= Header ======= -->
        <header id="header" class="header fixed-top d-flex align-items-center" style="direction: rtl;">

            <div class="d-flex align-items-center justify-content-between">
                <a href="index.html" class="logo d-flex align-items-center">
                    <img src="/img/logo.jpeg" alt="">
                    <span class="d-none d-lg-block">حليمة</span>
                </a>
                <i class="bi bi-list toggle-sidebar-btn"></i>
            </div><!-- End Logo -->

        </header><!-- End Header -->

        <!-- ======= Sidebar ======= -->
        <aside id="sidebar" class="sidebar" style="direction: rtl;">

            <ul class="sidebar-nav" id="sidebar-nav">

                <li class="nav-item">
                    <a class="nav-link collapsed" href="/dashboard">
                        
                        <span>الإحصائيات</span>
                    </a>
                </li><!-- End Dashboard Nav -->

                <li class="nav-item">
                    <a class="nav-link collapsed" href="/dashboard-sitters">
                        
                        <span>الحاضنات</span>
                    </a>
                </li><!-- End Dashboard Nav -->

                <li class="nav-item">
                    <a class="nav-link collapsed" href="/dashboard-nurseries">
                        
                        <span>الحضانات</span>
                    </a>
                </li><!-- End Dashboard Nav -->

                <li class="nav-item">
                    <a class="nav-link " href="/dashboard-customers">
                        
                        <span>اولياء الأمور</span>
                    </a>
                </li><!-- End Dashboard Nav -->

                <li class="nav-item">
                    <a class="nav-link collapsed" href="/dashboard-orders">
                        
                        <span>الطلبات</span>
                    </a>
                </li><!-- End Dashboard Nav -->


                <li class="nav-item">
                    <a class="nav-link collapsed" href="/dashboard-about">
                        
                        <span>من نحن</span>
                    </a>
                </li><!-- End Dashboard Nav -->

                <li class="nav-item">
                    <a class="nav-link collapsed" href="/dashboard-policy">
                        
                        <span>سياسة الاستخدام</span>
                    </a>
                </li><!-- End Dashboard Nav -->

            </ul>

        </aside><!-- End Sidebar-->

        <main id="main" class="main" style="direction: rtl;">
        
            <div class="pagetitle">
                <h1>الأطفال</h1>
            </div><!-- End Page Title -->

            <% if(typeof message != 'undefined') { %>
                <div class="col-md-12 text-center">
                    <h4 class="alert alert-success mt-4">
                        <%= message %>
                    </h4>
                </div>
            <% } %>
        
            <section class="section">
                <div class="row">
                    <div class="col-lg-12">
        
                        <div class="card">
                            <div class="card-body p-3">
                        
                                <!-- Multi Columns Form -->
                                <form class="row g-3" action="/api-addChildren" method="post">
                                    <div class="col-md-6">
                                        <label for="inputName5" class="form-label">الاسم</label>
                                        <input type="hidden" name="customerid" value="<%= customerid %>">
                                        <input name="name" type="text" class="form-control" id="inputName5">
                                    </div>
                                    <div class="col-md-6">
                                        <label for="inputName5" class="form-label">النوع</label>
                                        <select name="gender" id="inputState" class="form-select">
                                            <option value="male">ذكر</option>
                                            <option value="female">انثى</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="inputEmail5" class="form-label">الجنسية</label>
                                        <input name="nationality" type="text" class="form-control" id="inputEmail5">
                                    </div>
                                    <div class="col-md-6">
                                        <label for="inputState" class="form-label">تاريخ الميلاد</label>
                                        <input name="dateofbirth" type="date" class="form-control" id="inputState">
                                    </div>
                                    <div class="col-md-12">
                                        <label for="inputState" class="form-label">هوايات</label>
                                        <input name="hoppy" type="text" class="form-control" id="inputState">
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary">حفظ</button>
                                    </div>
                                </form><!-- End Multi Columns Form -->
                        
                            </div>
                        </div>
        
                    </div>
                </div>
            </section>
        
        </main><!-- End #main -->

        <a href="#" class="back-to-top d-flex align-items-center justify-content-center">
            <i class="bi bi-arrow-up-short"></i>
        </a>

        <!-- Vendor JS Files -->
        <script src="/vendor/apexcharts/apexcharts.min.js"></script>
        <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="/vendor/chart.js/chart.min.js"></script>
        <script src="/vendor/echarts/echarts.min.js"></script>
        <script src="/vendor/quill/quill.min.js"></script>
        <script src="/vendor/simple-datatables/simple-datatables.js"></script>
        <script src="/vendor/tinymce/tinymce.min.js"></script>
        <script src="/vendor/php-email-form/validate.js"></script>

        <!-- Template Main JS File -->
        <script src="/js/main.js"></script>
        
    </body>

</html>