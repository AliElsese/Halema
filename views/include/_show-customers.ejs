<% for(var i = 0; i < customers.length; i++) { %>
    <tr>
        <td><%= i + 1 %></td>
        <td><a href="/customerRelations/<%= customers[i].customerid %>" class="userInfo"><%= customers[i].username %></a></td>
        <td><%= customers[i].dateofbirth %></td>
        <td><%= customers[i].emailaddress %></td>
        <td><%= customers[i].phonenumber %></td>
        <td><%= customers[i].nationality %></td>
        <td>
            <a href="/api-deleteCustomer/<%= customers[i].customerid %>" style="color: red;font-weight: bold;">حذف</a>
            <br />
            <a href="/update-customer/<%= customers[i].customerid %>" style="color: #0c746c;font-weight: bold">تعديل</a>
        </td>
    </tr>
<% } %>